#include <stdio.h>

  float k,sisi1,sisi2,sisi3;

int main()
{
header();
input();
keliling();
}
void header(void){
	 printf("=====================================\n");
  printf("Program Menghitung Keliling Segitiga\n");
  printf("=====================================\n");
}
void input(void){
	printf("Masukkan panjang sisi-1: ");
  	scanf("%f", &sisi1);
  	printf("Masukkan panjang sisi-2: ");
	scanf("%f", &sisi2);
	printf("Masukkan panjang sisi-3: ");
	scanf("%f", &sisi3);
}

  void keliling(){
  	k = sisi1 + sisi2 + sisi3;
  	 printf("Keliling Lingkaran adalah %.2f\n", k);
  }
